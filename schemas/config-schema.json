{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/debuggy/PAIFlow/master/config_schema.json",
  "type": "object",
  "description": "Config schema of PAIFlow",
  "required": [
    "version",
    "name",
    "env_variables",
    "base_docker",
    "run_steps",
    "entrypoint_steps"
  ],
  "properties": {
    "version": {
      "$id": "#/properties/version",
      "type": "number",
      "description": "The version of the job config.",
      "default": 1.0
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "description": "The name of the job",
    },
    "env_variables": {
      "$id": "#/properties/env_variables",
      "type": "object",
      "description": "The environment variables defined in dockerfile."
    },
    "base_docker": {
      "$id": "#/properties/base_docker",
      "type": "string",
      "description": "A base docker image that the dockerfile build from.",
      "default": "",
      "examples": [
        "pai.build.base:hadoop2.7.2-cuda9.0-cudnn7-devel-ubuntu16.04"
      ],
      "pattern": "^(.*)$"
    },
    "run_steps": {
      "$id": "#/properties/run_steps",
      "type": "array",
      "description": "An array of steps that discribe the build process.",
      "items": {
        "$id": "#/properties/run_steps/items",
        "type": "object",
        "required": [
          "name",
          "type",
          "config"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/run_steps/items/properties/name",
            "type": "string",
            "description": "The name of a certain build step.",
            "pattern": "^(.*)$"
          },
          "type": {
            "$id": "#/properties/run_steps/items/properties/type",
            "type": "string",
            "description": "The type of a certain build step.",
            "oneof":[
                "components",
                "python_requirements",
                "dataset",
                "code",
                "custom"
            ],
            "pattern": "^(.*)$"
          },
          "config": {
            "$id": "#/properties/run_steps/items/properties/config",
            "type": "object",
            "description": "The config of a certain build step."
          }
        }
      }
    },
    "entrypoint_steps": {
      "$id": "#/properties/entrypoint_steps",
      "type": "array",
      "description": "An array of steps that discribe the entry point when running docker container.",
      "items": {
        "$id": "#/properties/entrypoint_steps/items",
        "type": "object",
        "required": [
          "name",
          "type",
          "config"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/entrypoint_steps/items/properties/name",
            "type": "string",
            "description": "The name of a certain build step.",
            "pattern": "^(.*)$"
          },
          "type": {
            "$id": "#/properties/entrypoint_steps/items/properties/type",
            "type": "string",
            "description": "The type of a certain build step.",
            "oneof":[
                "components",
                "python_requirements",
                "dataset",
                "code",
                "custom"
            ],
            "pattern": "^(.*)$"
          },
          "config": {
            "$id": "#/properties/entrypoint_steps/items/properties/config",
            "type": "object",
            "description": "The config of a certain build step."
          }
        }
      }
    }
  }
}
